{
  "version": 2,
  "builds": [
    {
      "src": "client/package.json",
      "use": "@vercel/static-build",
      "config": {
        "distDir": "dist"
      }
    },
    {
      "src": "api/[...path].ts",
      "use": "@vercel/node"
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "api/[...path].ts"
    },
    {
      "handle": "filesystem"
    },
    {
      "src": "/.*",
      "dest": "client/dist/index.html"
    }
  ]
}